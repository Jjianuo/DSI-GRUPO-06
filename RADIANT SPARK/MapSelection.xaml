<Page
    x:Class="RADIANT_SPARK.MapSelection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RADIANT_SPARK"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="mainButton" TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource NHL Ducks}"/>
            <Setter Property="FontSize" Value="65"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="SteelBlue"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0, 40, 0, 40"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Width" Value="400"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="Assets/TeamSelectionBG.png" Stretch="UniformToFill" Grid.ColumnSpan="3" Grid.RowSpan="2"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="myTextBlock" Text="MAP SELECTION" FontFamily="{StaticResource NHL Ducks}" 
            FontSize="150" Foreground="AliceBlue"  HorizontalAlignment="Center" Grid.ColumnSpan="3"/>
        <StackPanel Grid.Row="1">
            <Button Style="{StaticResource mainButton}" Height="400" Width="400" HorizontalAlignment="Center" Click="CharacterSelect_Click">
                <Button.Background>
                    <SolidColorBrush Color="SteelBlue" Opacity="0.65"/>
                </Button.Background>
                <Viewbox>
                    <SymbolIcon Symbol="World" Foreground="AliceBlue" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                </Viewbox>
            </Button>
            <TextBlock Text="MAP ONE" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource NHL Ducks}"
                FontSize="80" Foreground="FloralWhite" Padding="40"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" >
            <Button Style="{StaticResource mainButton}" Height="400" Width="400" HorizontalAlignment="Center" Click="CharacterSelect_Click">
                <Button.Background>
                    <SolidColorBrush Color="SteelBlue" Opacity="0.65"/>
                </Button.Background>
                <Viewbox>
                    <SymbolIcon Symbol="Camera" Foreground="AliceBlue" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                </Viewbox>
            </Button>
            <TextBlock Text="MAP TWO" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource NHL Ducks}"
                FontSize="80" Foreground="FloralWhite" Padding="40"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2" >
            <Button Style="{StaticResource mainButton}" Height="400" Width="400" HorizontalAlignment="Center" Click="CharacterSelect_Click">
                <Button.Background>
                    <SolidColorBrush Color="SteelBlue" Opacity="0.65"/>
                </Button.Background>
                <Viewbox>
                    <SymbolIcon Symbol="Street" Foreground="AliceBlue" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                </Viewbox>
            </Button>
            <TextBlock Text="MAP THREE" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource NHL Ducks}"
                FontSize="80" Foreground="FloralWhite" Padding="40"/>
        </StackPanel>
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Width="60" Height="40" Background="Transparent" Grid.Row="2" Style="{StaticResource NavigationBackButtonNormalStyle}" 
                Foreground="White" ToolTipService.ToolTip="Back" Click="BackButton_Click"/>
    </Grid>
</Page>
